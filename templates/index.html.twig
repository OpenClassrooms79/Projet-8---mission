{% extends 'base.html.twig' %}

{% block title %}Liste des projets - {{ parent() }}{% endblock %}

{% block header %}
    <div id="current-user"></div>
    <div id="title-page">
        <h1>Projets</h1>
    </div>
{% endblock %}

{% block content %}
    <div id="projects-container">
        {% for project in projects %}
            <article class="card-project">
                <a href="projets/{{ project.id }}">
                    <h2>{{ project.name }}</h2>
                </a>
                <div class="card-project-icons">
                    <a href="projet-edit.html"><i class="fa-solid fa-pen"></i></a>
                    <a href="projet/{{ project.id }}/supprimer"><i class="fa-solid fa-trash"></i></a>
                </div>
            </article>
        {% endfor %}

        <article class="card-project">
            <a href="projet-add.html">
                <i class="fa-solid fa-circle-plus add-project-icon"></i>
                <h2>Ajouter un projet</h2>
            </a>
        </article>
    </div>
{% endblock %}
